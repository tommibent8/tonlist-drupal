# -------------------------------------
# Composer dependencies (root)
# -------------------------------------
/vendor/

# -------------------------------------
# Drupal core & contrib modules/themes (inside web/)
# -------------------------------------
/web/core/
/web/modules/contrib/
/web/themes/contrib/

# -------------------------------------
# Drupal site-generated files
# -------------------------------------
/web/sites/*/files/
/web/sites/*/private/
/web/sites/*/settings.php
/web/sites/*/settings.local.php
/web/sites/*/services.yml
/web/sites/*/default.settings.php
/web/sites/*/default.services.yml

# Ignore Twig caches and temp directories
/web/sites/*/files/php/
/web/sites/*/files/styles/
web/sites/*/files/js/

# Avoid tracking example files
/web/sites/example.settings.local.php
/web/sites/example.sites.php

# -------------------------------------
# DDEV-related
# -------------------------------------
.ddev/.importdb
.ddev/generated
.ddev/.global_commands
*.tar
*.gz
*.sql
*.sql.gz

# -------------------------------------
# OS-generated files
# -------------------------------------
.DS_Store
Thumbs.db

# -------------------------------------
# IDE/editor folders
# -------------------------------------
.vscode/
.idea/
*.swp

# -------------------------------------
# Drupal tests
# -------------------------------------
/web/sites/simpletest/

# -------------------------------------
# Log files
# -------------------------------------
*.log

# -------------------------------------
# Node build files
# -------------------------------------
node_modules/
